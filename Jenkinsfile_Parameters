pipeline {
    agent any
    
    stages{
        stage('Monitoring URL') {
            steps {
                script{
                    print("-------------------------------------------------------------------------------------------------------------------")
                    print("-------------------------------------------------------------------------------------------------------------------")
                    print("Monitoring: $URL_TEST")
                    print("-------------------------------------------------------------------------------------------------------------------")
                    print("-------------------------------------------------------------------------------------------------------------------")
                    sh 'curl --head $URL_TEST | grep HTTP'
                }
            }
        }
    }  
}